.detail-container {
  margin: 20px auto;
  padding: 20px 20px;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.detail-container .divider {
  width: 100%;
}
.detail-container h1 {
  width: 100%;
  font-size: 20px;
  font-weight: 700;
  color: var(--theme-color-1);
  text-align: center;
  position: relative;
}
.detail-container .info {
  display: flex;
  flex-direction: column;
  line-height: 18px;
  color: #999;
  font-size: 12px;
  margin: 10px auto;
  text-align: center;
}
.detail-container .content {
  width: 100%;
  line-height: 1.5em;
}
.detail-container .content .blockquote {
  border-left: 4px solid #ccc;
  margin-bottom: 5px;
  margin-top: 5px;
  padding-left: 16px;
}
.detail-container .content .ol {
  padding-left: 20px;
}
.detail-container .content .ul {
  padding-left: 20px;
}
.detail-container .content .ql-indent-1 {
  padding-left: 1em;
}
.detail-container .content .ql-indent-2 {
  padding-left: 2em;
}
.detail-container .content .ql-indent-3 {
  padding-left: 3em;
}
.detail-container .content .ql-indent-4 {
  padding-left: 4em;
}
.detail-container .content .ql-indent-5 {
  padding-left: 5em;
}
.detail-container .content .h2 {
  font-weight: 700;
  font-size: 32rpx;
  margin-top: 10px;
}
.detail-container .content .h3 {
  font-weight: 500;
  font-size: 16px;
}
.detail-container .content .h4 {
  font-weight: 400;
  font-size: 14px;
}
.detail-container .content img {
  width: unset;
  max-width: 100%;
  width: 100%;
}
